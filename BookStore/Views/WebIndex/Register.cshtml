
@model IEnumerable<BookStore.Models.User>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
<title>武百网注册页面</title>
    <link href="../../Content/css/global.css" rel="stylesheet" />
    <link href="../../Content/css/layout.css" rel="stylesheet" />
    <link href="../../Content/css/template.css" rel="stylesheet" />
   
    <style>
        span
        {
            color:Red;
            display:none;
        }
    </style>
    
</head>

<body>
    <header class="header_middle">
        <div id="register_header">
            <div class="register_header_left"><img src="../../Content/images/logo.png" alt="logo" /></div>
            <div class="register_header_right">@Html.ActionLink("首页", "Index") | @Html.ActionLink("商品展示页", "Product")  | @Html.ActionLink("购物车", "Shopping") |  @Html.ActionLink("登录", "Login")</div>
        </div>
    </header>
    <section id="main">
        <div class="register_content">
            <div class="register_mid_bg">用户注册</div>
            <div class="register_message">
                <form action="" method="post" id="myform">

                    <dl class="register_row">
                        <dt>设置昵称：</dt>
                        <dd>
                            <input id="nickName" type="text" class="register_input" name="username" />
                            <span id="nameerr1">请输入昵称</span>
                            <span id="nameerr2">昵称必须在4-20位</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>设定密码：</dt>
                        <dd>
                            <input id="pwd" type="password" class="register_input" name="password" />
                            <span id="pwderr1">请输入密码</span>
                            <span id="pwderr2">密码必须在6-20位</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>再输入一次密码：</dt>
                        <dd>
                            <input id="repwd" type="password" class="register_input" />
                            <span id="repwderr1">请再次输入密码</span>
                            <span id="repwderr2">两次密码不一致</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>真实姓名：</dt>
                        <dd>
                            <input id="name" type="text" name="name" class="register_input" />
                            <span id="usernameerr1">请输入真实姓名</span>
                            <span id="usernameerr2">真实姓名必须大于1位</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>性别：</dt>
                        <dd><input name="sex" id="man" type="radio" name="sex" value="男" checked="checked" /> <label for="man">男</label></dd>
                        <dd> <input name="sex" id="woman" type="radio" name="sex" value="女" /> <label for="woman">女</label></dd>
                    </dl>
                    <dl class="register_row">
                        <dt>Email地址：</dt>
                        <dd>
                            <input id="email" type="email" name="email" class="register_input" />
                            <span id="emailerr1">请输入邮箱</span>
                            <span id="emailerr2">邮箱格式不合法</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>手机：</dt>
                        <dd>
                            <input id="phone" type="text" name="phone" class="register_input" />
                            <span id="phoneerr1">请输入11位手机号</span>
                            <span id="phoneerr2">手机号格式不匹配</span>
                        </dd>
                    </dl>
                    <dl class="register_row">
                        <dt>所在地区：</dt>
                        <dd>
                            <select name="address" id="province" style="width:120px;">
                                <option>请选择省/城市</option>
                            </select>
                        </dd>
                        <dd>
                            <select name="city" id="city" style="width:130px;">
                                <option>请选择城市/地区</option>
                            </select>
                        </dd>
                    </dl>
                    <div class="registerBtn"><input id="registerBtn" type="image" src="../../Content/images/register_btn_out.gif" /></div>
                </form>
            </div>
        </div>
    </section>
    <!--网站版权部分开始-->
    <footer id="footer">
        <div class="footer_top"><a href="#" target="_parent" class="footer_dull_red">正版保障</a> | <a href="#" target="_parent" class="footer_dull_red">满额免运</a> | <a href="#" target="_parent" class="footer_dull_red">货到付款</a> | <a href="#" target="_parent" class="footer_dull_red">品种最全</a> | <a href="#" target="_parent" class="footer_dull_red">免费退换</a></div>
        <div class="footer_end">Copyright (C) 武百网 2006-2016, All Rights Reserved  <img src="../../Content/images/validate.gif" alt="版权" style="vertical-align:middle;" /> 京PPP证100488号 出版物经营许可证 京批100160号</div>
    </footer>
    <script src="../../Content/js/jquery-1.12.4.js"></script>
    <script src="../../Content/js/register.js"></script>
    <script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
    <script>
        //昵称验证
        $("#nickName").blur(function () {
            if ($('#nickName').val().length < 1) {
                $("#nameerr1").show();
            }
            else {
                $("#nameerr1").hide();
            }
            if ($('#nickName').val().length > 0 && $('#nickName').val().length < 4 || $('#nickName').val().length > 20) {

                $('#nameerr2').show();
            }
            else {

                $('#nameerr2').hide();
            }
        })
        //密码验证
        $("#pwd").blur(function () {
            if ($('#pwd').val().length < 1) {
                $('#pwderr1').show();
            }
            else {
                $('#pwderr1').hide();
            }
            if (($('#pwd').val().length > 0 && $('#pwd').val().length < 6) || $('#pwd').val().length > 20) {

                $('#pwderr2').show();
            }
            else {

                $('#pwderr2').hide();
            }
        })

        //确认密码验证
        $("#repwd").blur(function () {
            if ($('#repwd').val().length < 1) {
                $('#repwderr1').show();
            }
            else {
                $('#repwderr1').hide();
            }
            if ($('#repwd').val().length > 0 && $('#repwd').val() != $('#pwd').val()) {

                $('#repwderr2').show();
            }
            else {

                $('#repwderr2').hide();
            }
        })

        //真实姓名验证
        $('#name').blur(function () {
            if ($('#name').val() == "") {
                $('#usernameerr1').show();
            }
            else {
                $('#usernameerr1').hide();
            }

            if ($('#name').val() > 0 && $('#name').val().length < 2) {
                $('#usernameerr2').show();
            }
            else {
                $('#usernameerr2').hide();
            }
        })

        //Email验证
        $('#email').blur(function () {
            var email = $('#email').val();
            if (email == "") {
                $('#emailerr1').show();
            }
            else {
                $('#emailerr1').hide();
            }
            if (email.length > 0 && !email.match(/^[A-Za-z\d]+([-_.][A-Za-z\d]+)*@@([A-Za-z\d]+[-.])+[A-Za-z\d]{2,4}$/)) {
                $('#emailerr2').show();
            }
            else {
                $('#emailerr2').hide();
            }
        })

        //手机号验证
        $('#phone').blur(function () {
            var phone = $('#phone').val();
            if (phone == "") {
                $('#phoneerr1').show();
            }
            else {
                $('#phoneerr1').hide();
            }
            if (phone.length > 0 && !phone.match(/^1(3|4|5|7|8)\d{9}$/)) {
                $('#phoneerr2').show();
            }
            else {
                $('#phoneerr2').hide();
            }
        })

    </script>
</body>
</html>

