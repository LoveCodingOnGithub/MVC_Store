@{
    ViewBag.Title = "Login";
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
<title>武百网登录页面</title>
    <link href="../../Content/css/global.css" rel="stylesheet" />
    <link href="../../Content/css/layout.css" rel="stylesheet"  />
    <link href="../../Content/css/template.css" rel="stylesheet" />
</head>

<body>
<header  class="header_middle">
    <div class="login_header_left"><img src="../../Content/images/logo.png" alt="logo"/></div>
    <div class="login_header_right">@Html.ActionLink("首页","Index") | @Html.ActionLink("商品展示页","Product")| @Html.ActionLink("购物车","Shopping") |@Html.ActionLink("注册","Register")</div>
</header>

<div id="main">
    <div class="login_main_left"><img src="../../Content/images/book.jpg"> </div>
    <div class="login_main_mid">
        <div class="login_content_top">请登录武百网</div>
        <form id="loginForm" action="" method="post">
            <dl class="login_content">
                <dt>Email地址或昵称：</dt>
                <dd><input id="user"  name="username" type="text" class="login_content_input"/></dd>
            </dl>
            <dl class="login_content">
                <dt>密码：</dt>
                <dd><input id="pwd" name="password" type="password" class="login_content_input"/></dd>
            </dl>
            <dl class="login_content">
                <dt></dt>
                <dd><input id="btn" value=" " type="submit" class="login_btn_out"/></dd>
            </dl>
        </form>
        <div class="login_content_end_bg">
            <div class="login_content_end_bg_top">
                <label class="login_content_bold">还不是武百网用户？</label>快捷方便的免费注册，让你立刻尽享武百网提供的条项优惠服务......
            </div>
            <div class="login_content_end_bg_end">
               
                <input id="quick_register" class="login_register_out" value=" " type="button"/>
            </div>
        </div>
    </div>
</div>

<footer id="footer">
    <div class="footer_top"><a href="#" target="_parent" class="footer_dull_red">正版保障</a> | <a href="#" target="_parent" class="footer_dull_red">满额免运</a> | <a href="#" target="_parent" class="footer_dull_red">货到付款</a> | <a href="#" target="_parent" class="footer_dull_red">品种最全</a> | <a href="#" target="_parent" class="footer_dull_red">免费退换</a></div>
    <div class="footer_end">Copyright (C) 武百网 2006-2016, All Rights Reserved  <img src="../../Content/images/validate.gif"  alt="版权" style="vertical-align:middle;" /> 京PPP证100488号 出版物经营许可证 京批100160号</div>
</footer>
<script src="../../Content/js/jquery-1.12.4.js"></script>
<script src="../../Content/js/login.js"></script>
<script>
    $('#btn').click(function () {
        if (($('#user').val() == "") && ($('#pwd').val() == "")) {
            alert("请输入用户名或邮箱");
            return false;
        }


    })
</script>
</body>
</html>

